
<div class="container">
  <div class="row p-1">
  <div class="col-5 mx-auto ">
    <h1 class="row w-100">Editing Book</h1>
    <% if @book.errors.any? %>
  
    <div class="row">
  <h3 class=""><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
  
<% end %>
    <%= form_with model: @book do |f|%>
    <div class="field pb-2 row">
      <%= f.label :title%>
      <div class="w-100">
      <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="field py-1 row ">
      <%= f.label :opinion  %>
      <div class="w-100">
      <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>
    <div class="actions text-whit pt-3 pb-3 row w-100">
      <%= f.submit 'Update Book', class:'btn btn-success ' %>
    </div>
   <% end %>
   <div class="row">
   <%= link_to "Show", book_path(@book.id) %>&nbsp;|&nbsp;<%= link_to "Back", books_path %>
   </div>
</div>
</div>
</div>