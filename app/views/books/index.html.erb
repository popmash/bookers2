<% if @book_new.errors.any? %>
  <div class="container ">
    <div class="row">
  <h3 class="w-100"><%= @book_new.errors.count %> errors prohibited this obj from being saved:</h3>
  <ul>
    <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
  </div>
<% end %>
<%= render 'list.index', books: @books %>
  <div class="col-8 offset-1 ">
   <div class="row">
    <h1 class="h2">Books</h1>
   </div>
    <div class="row">
     <table class="col table table-hover">
      <tr class="border-top border-bottom mx-auto ">
       <th class="col-2 p-2 "></th>
       <th class="col-3 p-2 ">Title</th>
       <th class="col p-2">Opinion</th>
      </tr>
       <% @books.each do |book| %>
        <tr class="border-bottom ">
         <td class="col-2 p-3 "><%= image_tag book.user.get_profile_image(80,80) %></td>
         <td class="col-3 pl-0"><%= link_to book.title, book_path(book.id) %></td>
         <td class="col pl-0"><%= book.body %></td>
        </tr>
       <% end %>
      </table>
    </div>  
   </div>
  </div>
</div>

   