 <%= render 'books/list', book_new: @book_new, user: @user %>
  <div class="col-md-8 offset-md-1">
   <div class="row">
    <h1 class="h2">Books</h1>
   </div>
    <div class="row ">
     <table class="col table table-hover">
      <tr class="border-top border-bottom mx-auto ">
       <th class="col-2 "></th>
       <th class="col-auto  ">Title</th>
       <th class="col-auto ">Opinion</th>
      </tr>
       <% @books.each do |book| %>
        <tr class="border-bottom ">
         <td class="col-2 p-3 ">
          <%= link_to user_path(@user.id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %></td>
         <% end %>
         <td class="col-auto "><%= link_to book.title, book_path(book.id) %></td>
         <td class="col-auto "><%= book.body %></td>
        </tr>
       <% end %>
      </table>
     </div>
   </div>
 </div>
</div>

  