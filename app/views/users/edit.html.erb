<div class="container p-3">
 <div class="row ">
   <div class="col-5 mx-auto ">
     <div class="row">
    <h2 class="">User info</h2>
    </div>
    <% if @user.errors.any? %>
    <div class="row">
    <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
    </div>
    <ul>
   <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
    </ul>
   <% end %>
    <%= form_with model: @user do |f| %>
    <div class="row ">
     <label for="inputName">Name</label>
     </div>
   <div class="field pb-2 ">
       <%= f.text_field :name, class: 'form-control row w-100', autofocus: true, id:"inputName" %>
  </div>
  <div class="row pt-2">
  <label for="inputImage">Image</label>
  </div>
  <div class="field pb-2 row ">
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  </div>
  <div class="row pt-2">
  <label for="inputIntroduction">Introduction</label>
  </div>
  <div class="field pb-3 row w-100">
  <%= f.text_area :introduction, class: 'form-control', autofocus: true, id:"inputIntroduction", placeholder:""%>
  </div>
  <%= f.submit "Update User", class: 'btn btn-secondary row' %>
<% end %>
</div>
</div>
</div>